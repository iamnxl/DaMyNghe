@using DaMyNghe.Models;
@using DaMyNghe.Models.CustomModels;
@model List<DanhMuc_MauDa>
@{
    ViewBag.Title = "Home Page";
}

@foreach (DanhMuc_MauDa item in Model)
{
    <div class="d-flex align-items-center p-1 my-3 text-white-50 bg-purple rounded box-shadow bg-info" style="border:1px solid black">
        <div class="lh-100">
            <h6 class="mb-0 text-white lh-100">@item.danhMuc.Ten</h6>
            <small>Since 2011</small>
        </div>
    </div>
    <div class="row">
        @for (int i = 0; i < item.mauDa.Count; i++)
        {
            <div class="col-md-3 col-lg-3" style="border:0px solid black;@if (i < Math.Ceiling((double)item.mauDa.Count / 4.0) * 4-4)
                    {
                    <text>margin-bottom:20px;</text>
                    }" align="center">
                <img src="@item.mauDa[i].getLink" style="height: 20em; width: 100%;" />
                <h5 style="margin-top:4px">Mẫu @item.mauDa[i].getID</h5>
                <p class=" text-danger">Giá liên hệ 090.222.3579</p>
            </div>
        }
    </div>
    <div class="d-flex justify-content-between mt-4">
        <a class="text-white-50" href="#">Xem tất cả</a>
        <div class="">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    @for(int i=1;i<=Math.Ceiling((double)item.mauDa.Count / 8.0); i++)
                    {
                        <li class="page-item"><a class="page-link" href="#">@i</a></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <a class="" href="#">Xem tất cả</a>
    </div>
}